---
interface Props {
    frontmatter: any;
    url?: string;
    full: boolean;
}

const { frontmatter, url, full } = Astro.props;
---

<article class={"article " + (full ? " full" : " preview")}>
    <p class="date">{new Date(frontmatter.date).toDateString()}</p>
    <p class="author">by <b>{frontmatter.author}</b></p>
    <p class="category">{frontmatter.category}</p>
    {
        url ? (
            <h2 class="title">
                <a href={url}>{frontmatter.title}</a>
            </h2>
        ) : (
            <h2 class="title">{frontmatter.title}</h2>
        )
    }
    <hr />
    <slot />
</article>

<style lang="scss">
    .preview {
        outline: 2px solid $accent;
        border-radius: 8px;
        width: 250px;
        box-shadow: $accent 5px 5px;
    }
    
    article {
        padding: 10px;

        .category {
            margin-top: 10px;
            margin-bottom: 0;
            border-bottom: 1px solid $accent;
            display: inline-block;
            font-size: 14px;
        }

        .date {
            margin: 0;
            opacity: 0.9;
        }

        .author {
            margin-top: 2px;
            margin-bottom: 0;
            opacity: 0.7;
        }

        .title {
            margin-top: 2px;
            margin-bottom: 10px;;

            a {
                color: unset;
                text-decoration: none;

                &:hover {
                    text-decoration: underline;
                }
            }
        }
    }
</style>
