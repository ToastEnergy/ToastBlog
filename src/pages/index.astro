---
import Layout from '../layouts/Layout.astro';
const articles = await Astro.glob('./articles/*/*.md')
import Article from '../components/Article.astro';
---
<Layout>
	<h1>Toast Blog</h1>
	<div class="articles">
		{articles.map((article) => <Article frontmatter={article.frontmatter} url={article.url} full={false}>{article.frontmatter.description}</Article>)}
	</div>
</Layout>

<style>
	h1 {
		margin-top: 0;
	}

	.articles {
		display: flex;
		gap: 20px;
		flex-wrap: wrap;
	}
</style>
